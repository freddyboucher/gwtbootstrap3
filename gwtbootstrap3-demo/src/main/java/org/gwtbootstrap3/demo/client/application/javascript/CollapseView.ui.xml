<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:d="urn:import:org.gwtbootstrap3.demo.client.ui">

    <ui:style>
        .danger {
            background-color: #fcf2f2;
            border-color: #dFb5b4;
        }

        .margin-fix {
            margin-top: 0 !important;
        }

        .margin {
            margin: 5px;
        }
    </ui:style>

    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Collapse"/>

            <b:BlockQuote addStyleNames="{style.danger}">
                <b:Heading addStyleNames="{style.margin-fix}" size="4"
                           text="Cross-browser compatibility"/>
                <b:Paragraph>
                    <b>Transition animations not supported in Internet Explorer 8 &amp; 9</b>
                    <br/>
                    Bootstrap exclusively uses CSS3 for its animations, but Internet Explorer 8 &amp; 9 don't support the
                    necessary CSS properties. Thus, there are no slide transition animations when using these browsers.
                    We have intentionally decided not to include jQuery-based fallbacks for the transitions.
                </b:Paragraph>
            </b:BlockQuote>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Collapse via Button target"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:Button type="DANGER" dataToggle="COLLAPSE" dataTarget="#demoCollapse">
                        Collapse Me
                    </b:Button>
                    <b:ClearFix addStyleNames="{style.margin}"/>
                    <b:Collapse ui:field="demoCollapse" b:id="demoCollapse">
                        <b:Well>
                            <b:Paragraph>
                                You can also use the plugin without the accordion
                                markup. Make a button toggle the expanding and collapsing of
                                another element.
                            </b:Paragraph>
                        </b:Well>
                    </b:Collapse>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:Button type="..." dataToggle="COLLAPSE" dataTarget="#demoCollapse" text="Collapse Me"/&gt;\n
                        &lt;b:Collapse b:id="demoCollapse&gt;\n
                        \s\sWidget To Collapse\n
                        &lt;/b:Collapse&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Accordion Example using PanelCollapse"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:PanelGroup b:id="accordion">
                        <b:Panel>
                            <b:PanelHeader>
                                <b:HeadingPanel size="4">
                                    <b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseOne"
                                              text="Collapse Group #1"/>
                                </b:HeadingPanel>
                            </b:PanelHeader>
                            <b:PanelCollapse b:id="collapseOne" in="true">
                                <b:PanelBody>
                                    <b:Paragraph>
                                        I am the content of Collapse Group #1.
                                    </b:Paragraph>
                                </b:PanelBody>
                            </b:PanelCollapse>
                        </b:Panel>
                        <b:Panel>
                            <b:PanelHeader>
                                <b:HeadingPanel size="4">
                                    <b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseTwo"
                                              text="Collapse Group #2"/>
                                </b:HeadingPanel>
                            </b:PanelHeader>
                            <b:PanelCollapse b:id="collapseTwo">
                                <b:PanelBody>
                                    <b:Paragraph>
                                        I am the content of Collapse Group #1.
                                    </b:Paragraph>
                                </b:PanelBody>
                            </b:PanelCollapse>
                        </b:Panel>
                        <b:Panel>
                            <b:PanelHeader>
                                <b:HeadingPanel size="4">
                                    <b:Anchor icon="ANCHOR" dataToggle="COLLAPSE" dataParent="#accordion"
                                              dataTarget="#collapseThree" text="Collapse Group #3"/>
                                </b:HeadingPanel>
                            </b:PanelHeader>
                            <b:PanelCollapse b:id="collapseThree">
                                <b:PanelBody>
                                    <b:Paragraph>
                                        I am the content of Collapse Group #1.
                                    </b:Paragraph>
                                </b:PanelBody>
                            </b:PanelCollapse>
                        </b:Panel>
                    </b:PanelGroup>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:PanelGroup b:id="accordion"&gt;\n
                        \s\s&lt;b:Panel&gt;\n
                        \s\s\s\s&lt;b:PanelHeader&gt;\n
                        \s\s\s\s\s\s&lt;b:HeadingPanel size="4"&gt;\n
                        \s\s\s\s\s\s\s\s&lt;b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseOne"/&gt;\n
                        \s\s\s\s\s\s&lt;/b:HeadingPanel&gt;\n
                        \s\s\s\s&lt;/b:PanelHeader&gt;\n
                        \s\s\s\s&lt;b:PanelCollapse b:id="collapseOne"&gt;\n
                        \s\s\s\s\s\s&lt;b:PanelBody&gt;\n
                        \s\s\s\s\s\s\s\sWidgets\n
                        \s\s\s\s\s\s&lt;/b:PanelBody&gt;\n
                        \s\s\s\s&lt;/b:PanelCollapse&gt;\n
                        \s\s&lt;/b:Panel&gt;\n
                        \s\s&lt;b:Panel&gt;\n
                        \s\s\s\s&lt;b:PanelHeader&gt;\n
                        \s\s\s\s\s\s&lt;b:HeadingPanel size="4"&gt;\n
                        \s\s\s\s\s\s\s\s&lt;b:Anchor dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseTwo"/&gt;\n
                        \s\s\s\s\s\s&lt;/b:HeadingPanel&gt;\n
                        \s\s\s\s&lt;/b:PanelHeader&gt;\n
                        \s\s\s\s&lt;b:PanelCollapse b:id="collapseTwo"&gt;\n
                        \s\s\s\s\s\s&lt;b:PanelBody&gt;\n
                        \s\s\s\s\s\s\s\sWidgets\n
                        \s\s\s\s\s\s&lt;/b:PanelBody&gt;\n
                        \s\s\s\s&lt;/b:PanelCollapse&gt;\n
                        \s\s&lt;/b:Panel&gt;\n
                        \s\s&lt;b:Panel&gt;\n
                        \s\s\s\s&lt;b:PanelHeader&gt;\n
                        \s\s\s\s\s\s&lt;b:HeadingPanel size="4"&gt;\n
                        \s\s\s\s\s\s\s\s&lt;b:Anchor icon="..." dataToggle="COLLAPSE" dataParent="#accordion" dataTarget="#collapseThree"/&gt;\n
                        \s\s\s\s\s\s&lt;/b:HeadingPanel&gt;\n
                        \s\s\s\s&lt;/b:PanelHeader&gt;\n
                        \s\s\s\s&lt;b:PanelCollapse b:id="collapseThree"&gt;\n
                        \s\s\s\s\s\s&lt;b:PanelBody&gt;\n
                        \s\s\s\s\s\s\s\sWidgets\n
                        \s\s\s\s\s\s&lt;/b:PanelBody&gt;\n
                        \s\s\s\s&lt;/b:PanelCollapse&gt;\n
                        \s\s&lt;/b:Panel&gt;\n
                        &lt;/b:PanelGroup&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>
        </b:Column>
    </b:Row>

</ui:UiBinder>
