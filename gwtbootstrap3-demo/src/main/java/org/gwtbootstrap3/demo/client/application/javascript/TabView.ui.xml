<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .margin {
            margin-right: 10px;
        }

        .spacing {
            margin: 10px;
            border-bottom: 1px solid #CCC;
        }
    </ui:style>

    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Tabs"/>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Basic"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:NavTabs>
                        <b:TabListItem active="true" href="#tab1" toggle="TAB">Tab 1</b:TabListItem>
                        <b:TabListItem href="#tab2" toggle="TAB">Tab 2</b:TabListItem>
                        <b:TabListItem href="#tab3" toggle="TAB">Tab 3</b:TabListItem>
                    </b:NavTabs>
                    <b:TabContent>
                        <b:TabPane active="true" b:id="tab1">
                            <b:Heading size="5">Tab 1</b:Heading>
                            <b:Paragraph>
                                You must have active="true" on the first tab pane, or set it programmatically.
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane b:id="tab2">
                            <b:Heading size="5">Tab 2</b:Heading>
                            <b:Paragraph>
                                You must have active="true" on the first tab pane, or set it programmatically.
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane b:id="tab3">
                            <b:Heading size="5">Tab 3</b:Heading>
                            <b:Paragraph>
                                You must have active="true" on the first tab pane, or set it programmatically.
                            </b:Paragraph>
                        </b:TabPane>
                    </b:TabContent>
                </b:PanelBody>
                <b:PanelFooter>
                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:NavTabs&gt;\n
                        \s\s&lt;b:TabListItem active="true" href="#tab1" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab2" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab3" toggle="TAB" text="..."/&gt;\n
                        &lt;/b:NavTabs&gt;\n

                        &lt;b:TabContent&gt;\n
                        \s\s&lt;b:TabPane active="true" b:id="tab1"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane b:id="tab2"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane b:id="tab3"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        &lt;/b:TabContent&gt;\n
                    </b:Pre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Fading Content In/Out"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:NavTabs>
                        <b:TabListItem active="true" href="#tab4" toggle="TAB">Tab 4</b:TabListItem>
                        <b:TabListItem href="#tab5" toggle="TAB">Tab 5</b:TabListItem>
                        <b:TabListItem href="#tab6" toggle="TAB">Tab 6</b:TabListItem>
                    </b:NavTabs>
                    <b:TabContent>
                        <b:TabPane fade="true" in="true" active="true" b:id="tab4">
                            <b:Heading size="5">Tab 4</b:Heading>
                            <b:Paragraph>
                                To Fade you must have fade="true" on all TabPanes. Also on the first tab you must have
                                active="true" and in="true".
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane fade="true" b:id="tab5">
                            <b:Heading size="5">Tab 5</b:Heading>
                            <b:Paragraph>
                                To Fade you must have fade="true" on all TabPanes. Also on the first tab you must have
                                active="true" and in="true".
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane fade="true" b:id="tab6">
                            <b:Heading size="5">Tab 6</b:Heading>
                            <b:Paragraph>
                                To Fade you must have fade="true" on all TabPanes. Also on the first tab you must have
                                active="true" and in="true".
                            </b:Paragraph>
                        </b:TabPane>
                    </b:TabContent>
                </b:PanelBody>
                <b:PanelFooter>
                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:NavTabs&gt;\n
                        \s\s&lt;b:TabListItem active="true" href="#tab4" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab5" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab6" toggle="TAB" text="..."/&gt;\n
                        &lt;/b:NavTabs&gt;\n

                        &lt;b:TabContent&gt;\n
                        \s\s&lt;b:TabPane fade="true" in="true" active="true" b:id="tab4"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane fade="true" b:id="tab5"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane fade="true" b:id="tab6"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        &lt;/b:TabContent&gt;\n
                    </b:Pre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Force Show Tabs"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:NavTabs>
                        <b:TabListItem active="true" href="#tab7" toggle="TAB" ui:field="tab7ListItem">Tab 7
                        </b:TabListItem>
                        <b:TabListItem href="#tab8" toggle="TAB" ui:field="tab8ListItem">Tab 8</b:TabListItem>
                        <b:TabListItem href="#tab9" toggle="TAB" ui:field="tab9ListItem">Tab 9</b:TabListItem>
                    </b:NavTabs>
                    <b:TabContent>
                        <b:TabPane active="true" b:id="tab7">
                            <b:Heading size="5">Tab 7</b:Heading>
                            <b:Paragraph>
                                Use Buttons to change me!
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane b:id="tab8">
                            <b:Heading size="5">Tab 8</b:Heading>
                            <b:Paragraph>
                                Use Buttons to change me!
                            </b:Paragraph>
                        </b:TabPane>
                        <b:TabPane b:id="tab9">
                            <b:Heading size="5">Tab 9</b:Heading>
                            <b:Paragraph>
                                Use Buttons to change me!
                            </b:Paragraph>
                        </b:TabPane>
                    </b:TabContent>
                    <b:Button addStyleNames="{style.margin}" type="PRIMARY" text="Change to Tab 7"
                              ui:field="tab7Button"/>
                    <b:Button addStyleNames="{style.margin}" type="PRIMARY" text="Change to Tab 8"
                              ui:field="tab8Button"/>
                    <b:Button addStyleNames="{style.margin}" type="PRIMARY" text="Change to Tab 9"
                              ui:field="tab9Button"/>
                </b:PanelBody>
                <b:PanelFooter>
                    <b:Heading size="4" text="UiBinder"/>

                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:NavTabs&gt;\n
                        \s\s&lt;b:TabListItem active="true" href="#tab7" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab8" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;b:TabListItem href="#tab9" toggle="TAB" text="..."/&gt;\n
                        &lt;/b:NavTabs&gt;\n

                        &lt;b:TabContent&gt;\n
                        \s\s&lt;b:TabPane active="true" b:id="tab7"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane b:id="tab8"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;b:TabPane b:id="tab9"&gt;\n
                        \s\s\s\s...\n
                        \s\s&lt;/b:TabPane&gt;\n
                        &lt;/b:TabContent&gt;\n
                    </b:Pre>

                    <b:Heading size="4" text="Java code (on the list item you want to show)"/>

                    <b:Pre addStyleNames="prettyprint lang-java">
                        @UiField\n
                        TabListItem tabListItem;\n\n

                        Click Handler\n
                        tabListItem.showTab();
                    </b:Pre>

                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="3" text="Positions"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:Paragraph>
                        You can change the default position of the tabs (top) by wrapping the NavTabs and TabContent
                        inside a TabPanel
                        and setting the tabPosition on it.
                        <br/>
                        <br/>
                        The choices of tab position are: LEFT, RIGHT, BELOW, TOP (default).
                        <br/>
                        <br/>
                        <b>** Note the position of the NavTabs and the TabContent on the BELOW example! **</b>
                        <br/>
                        <br/>
                    </b:Paragraph>
                    <b:FluidContainer>
                        <b:Row>
                            <b:Column size="MD_6">
                                <b:TabPanel tabPosition="LEFT">
                                    <b:NavTabs>
                                        <b:TabListItem active="true" href="#tab10" toggle="TAB">Tab 10</b:TabListItem>
                                        <b:TabListItem href="#tab11" toggle="TAB">Tab 11</b:TabListItem>
                                        <b:TabListItem href="#tab12" toggle="TAB">Tab 12</b:TabListItem>
                                    </b:NavTabs>
                                    <b:TabContent>
                                        <b:TabPane active="true" b:id="tab10">
                                            <b:Heading size="5">Tab 10</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the left!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab11">
                                            <b:Heading size="5">Tab 11</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the left!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab12">
                                            <b:Heading size="5">Tab 12</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the left!
                                            </b:Paragraph>
                                        </b:TabPane>
                                    </b:TabContent>
                                </b:TabPanel>
                            </b:Column>
                            <b:Column size="MD_6">
                                <b:TabPanel tabPosition="RIGHT">
                                    <b:NavTabs>
                                        <b:TabListItem active="true" href="#tab13" toggle="TAB">Tab 13</b:TabListItem>
                                        <b:TabListItem href="#tab14" toggle="TAB">Tab 14</b:TabListItem>
                                        <b:TabListItem href="#tab15" toggle="TAB">Tab 15</b:TabListItem>
                                    </b:NavTabs>
                                    <b:TabContent>
                                        <b:TabPane active="true" b:id="tab13">
                                            <b:Heading size="5">Tab 13</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the right!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab14">
                                            <b:Heading size="5">Tab 14</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the right!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab15">
                                            <b:Heading size="5">Tab 15</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the right!
                                            </b:Paragraph>
                                        </b:TabPane>
                                    </b:TabContent>
                                </b:TabPanel>
                            </b:Column>
                            <b:Column size="XS_12">
                                <b:TabPanel tabPosition="BELOW">
                                    <b:TabContent>
                                        <b:TabPane active="true" b:id="tab16">
                                            <b:Heading size="5">Tab 16</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the bottom!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab17">
                                            <b:Heading size="5">Tab 17</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the bottom!
                                            </b:Paragraph>
                                        </b:TabPane>
                                        <b:TabPane b:id="tab18">
                                            <b:Heading size="5">Tab 18</b:Heading>
                                            <b:Paragraph>
                                                My tabs are on the bottom!
                                            </b:Paragraph>
                                        </b:TabPane>
                                    </b:TabContent>
                                    <b:NavTabs>
                                        <b:TabListItem active="true" href="#tab16" toggle="TAB">Tab 16</b:TabListItem>
                                        <b:TabListItem href="#tab17" toggle="TAB">Tab 17</b:TabListItem>
                                        <b:TabListItem href="#tab18" toggle="TAB">Tab 18</b:TabListItem>
                                    </b:NavTabs>
                                </b:TabPanel>
                            </b:Column>
                        </b:Row>
                    </b:FluidContainer>
                </b:PanelBody>
                <b:PanelFooter>
                    <b:Heading size="4">Left</b:Heading>
                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:TabPanel tabPosition="LEFT"&gt;\n
                        \s\s &lt;b:NavTabs&gt;\n
                        \s\s\s\s&lt;b:TabListItem active="true" href="#tab1" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab2" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab3" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;/b:NavTabs&gt;\n

                        \s\s&lt;b:TabContent&gt;\n
                        \s\s\s\s&lt;b:TabPane active="true" b:id="tab1"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab2"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab3"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;/b:TabContent&gt;\n
                        &lt;/b:TabPanel&gt;\n
                    </b:Pre>
                    <b:Heading size="4">Right</b:Heading>
                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:TabPanel tabPosition="RIGHT"&gt;\n
                        \s\s &lt;b:NavTabs&gt;\n
                        \s\s\s\s&lt;b:TabListItem active="true" href="#tab1" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab2" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab3" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;/b:NavTabs&gt;\n

                        \s\s&lt;b:TabContent&gt;\n
                        \s\s\s\s&lt;b:TabPane active="true" b:id="tab1"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab2"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab3"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;/b:TabContent&gt;\n
                        &lt;/b:TabPanel&gt;\n
                    </b:Pre>
                    <b:Heading size="4">Below (** CHECK THE POSITIONING OF CHILDREN **)</b:Heading>
                    <b:Pre addStyleNames="prettyprint lang-xml">
                        &lt;b:TabPanel tabPosition="BELOW"&gt;\n
                        \s\s&lt;b:TabContent&gt;\n
                        \s\s\s\s&lt;b:TabPane active="true" b:id="tab1"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab2"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s\s\s&lt;b:TabPane b:id="tab3"&gt;\n
                        \s\s\s\s\s\s...\n
                        \s\s\s\s&lt;/b:TabPane&gt;\n
                        \s\s&lt;/b:TabContent&gt;\n

                        \s\s &lt;b:NavTabs&gt;\n
                        \s\s\s\s&lt;b:TabListItem active="true" href="#tab1" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab2" toggle="TAB" text="..."/&gt;\n
                        \s\s\s\s&lt;b:TabListItem href="#tab3" toggle="TAB" text="..."/&gt;\n
                        \s\s&lt;/b:NavTabs&gt;\n
                        &lt;/b:TabPanel&gt;\n
                    </b:Pre>
                </b:PanelFooter>
            </b:Panel>
        </b:Column>
    </b:Row>

</ui:UiBinder>
