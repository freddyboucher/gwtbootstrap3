<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .column {
            margin-bottom: 10px;
        }

        .column > div {
            border-radius: 4px;
            border: 1px solid #CCC;
            padding: 10px;
            text-align: center;
        }

        .column > div.visible {
            color: #468847;
            background-color: #dff0d8;
            border-color: #d6e9c6;
        }
    </ui:style>

    <b:Row>

        <b:PageHeader text="Responsive Utilities"/>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="Visible / Hidden on..."/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:FluidContainer>
                    <b:Row>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_3">
                            <b:Div addStyleNames="{style.visible}" visibleOn="XS">
                                <b:Span text="Visible on X-Small"/>
                            </b:Div>
                            <b:Div hiddenOn="XS">
                                <b:Span text="Extra Small"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_3">
                            <b:Div addStyleNames="{style.visible}" visibleOn="SM">
                                <b:Span text="Visible on Small"/>
                            </b:Div>
                            <b:Div hiddenOn="SM">
                                <b:Span text="Small"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_3">
                            <b:Div addStyleNames="{style.visible}" visibleOn="MD">
                                <b:Span text="Visible on Medium"/>
                            </b:Div>
                            <b:Div hiddenOn="MD">
                                <b:Span text="Medium"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_3">
                            <b:Div addStyleNames="{style.visible}" visibleOn="LG">
                                <b:Span text="Visible on Large"/>
                            </b:Div>
                            <b:Div hiddenOn="LG">
                                <b:Span text="Large"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="XS SM">
                                <b:Span text="Visible on X-Small/Small"/>
                            </b:Div>
                            <b:Div hiddenOn="XS SM">
                                <b:Span text="Extra Small / Small"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="MD LG">
                                <b:Span text="Visible on Medium/Large"/>
                            </b:Div>
                            <b:Div hiddenOn="MD LG">
                                <b:Span text="Medium/Large"/>
                            </b:Div>
                        </b:Column>
                        <b:ClearFix visibleOn="XS"/>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="XS MD">
                                <b:Span text="Visible on X-Small/Medium"/>
                            </b:Div>
                            <b:Div hiddenOn="XS MD">
                                <b:Span text="X-Small/Medium"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="SM LG">
                                <b:Span text="Visible on Small/Large"/>
                            </b:Div>
                            <b:Div hiddenOn="SM LG">
                                <b:Span text="Small/Large"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="XS LG">
                                <b:Span text="Visible on X-Small/Large"/>
                            </b:Div>
                            <b:Div hiddenOn="XS LG">
                                <b:Span text="X-Small/Large"/>
                            </b:Div>
                        </b:Column>
                        <b:Column addStyleNames="{style.column}" size="XS_6 SM_6">
                            <b:Div addStyleNames="{style.visible}" visibleOn="SM MD">
                                <b:Span text="Visible on Small/Medium"/>
                            </b:Div>
                            <b:Div hiddenOn="SM MD">
                                <b:Span text="Small/Medium"/>
                            </b:Div>
                        </b:Column>
                    </b:Row>
                </b:FluidContainer>
            </b:PanelBody>
            <b:PanelFooter>
                <b:Pre addStyleNames="prettyprint lang-xml">
                    &lt;b:Span visibleOn="SM" text=""/&gt;\n
                    &lt;b:Span visibleOn="SM MD" text=""/&gt;\n
                    &lt;b:Span hiddenOn="SM" text=""/&gt;\n
                    &lt;b:Span hiddenOn="SM LG" text=""/&gt;\n
                </b:Pre>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>

</ui:UiBinder>
